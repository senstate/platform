{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@senstate/client": ["libs/client/src/index.ts", "dist/libs/client"],
      "@senstate/client-connection": ["libs/client-connection/src/index.ts"],
      "@senstate/dashboard-connection": [
        "libs/dashboard-connection/src/index.ts"
      ],
      "@senstate/app-utils": ["libs/app-utils/src/index.ts"],
      "@test-utils/*": ["libs/test-utils/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
